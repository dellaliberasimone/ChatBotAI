{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.35.1.17967",
      "templateHash": "12749256689731134260"
    }
  },
  "parameters": {
    "acrName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Container Registry"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Key Vault"
      }
    },
    "aksClusterName": {
      "type": "string",
      "metadata": {
        "description": "Name of the AKS Cluster"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "openAiName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure OpenAI resource"
      }
    },
    "openAiDeploymentName": {
      "type": "string",
      "metadata": {
        "description": "Name of the GPT-4-mini deployment"
      }
    },
    "openAiSku": {
      "type": "string",
      "defaultValue": "S0",
      "metadata": {
        "description": "SKU for the Azure OpenAI resource"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-01-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": false
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2023-01-01",
      "name": "[parameters('aksClusterName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "dnsPrefix": "[format('{0}-dns', parameters('aksClusterName'))]",
        "agentPoolProfiles": [
          {
            "name": "nodepool1",
            "count": 2,
            "vmSize": "Standard_DS2_v6",
            "osType": "Linux",
            "mode": "System"
          }
        ],
        "servicePrincipalProfile": {
          "clientId": "msi"
        }
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2023-05-01",
      "name": "[parameters('openAiName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('openAiSku')]"
      },
      "kind": "OpenAI",
      "properties": {
        "apiProperties": {
          "openai": {
            "deploymentName": "[parameters('openAiDeploymentName')]",
            "model": "gpt-4o-mini"
          }
        }
      }
    }
  ]
}